#:set omanair_blue (.33, .45, .58)
#:set omanair_grey (.78, .78, .78)
#:set omanair_gold (1, .72, .3)

#:import MenuButton menu_button.MenuButton

<WYOB_Label@Label>
	color: (0, 0, 0, 1)
	canvas.before:
		Color:
			rgb: omanair_grey
		Rectangle:
			pos: self.pos
			size: self.size

<GUI>:
	orientation: "vertical"
	BoxLayout:
		size_hint_y: 0.2
		WYOB_Label:
			text: "WYOB v0.1 alpha "
			bold: True
			canvas.before:
				Color:
					rgb: omanair_blue
				Rectangle:
					pos: self.pos
					size: self.size
		MenuButton:
			size_hint_x: 0.3
			on_press: root.update()

	BoxLayout:
		size_hint_y: 0.15
		WYOB_Label:
			text: "Last updated:"
			canvas.before:
				Color:
					rgb: omanair_gold
				Rectangle:
					pos: self.pos
					size: self.size
		WYOB_Label:
			text: root.last_updated
	BoxLayout:
		size_hint_y: 0.15
		WYOB_Label:
			text: "Next duty:"
			canvas.before:
				Color:
					rgb: omanair_gold
				Rectangle:
					pos: self.pos
					size: self.size
		WYOB_Label:
			text: root.next_duty

	BoxLayout:
		size_hint_y: 0.15
		WYOB_Label:
			text: "Reporting:"
			canvas.before:
				Color:
					rgb: omanair_gold
				Rectangle:
					pos: self.pos
					size: self.size
		WYOB_Label:
			text: root.next_reporting

	WYOB_Label:
		text: "Central widget"

	BoxLayout:
	    size_hint_y: 0.1
	    orientation: "horizontal"

        WYOB_Label:
            text: root.utc_clock
            canvas.before:
                Color:
                    rgb: omanair_gold
                Rectangle:
                    pos: self.pos
                    size: self.size
        WYOB_Label:
            text: root.loc_clock
            canvas.before:
                Color:
                    rgb: omanair_gold
                Rectangle:
                    pos: self.pos
                    size: self.size

	WYOB_Label:
		text: "An unofficial app to make IOB handy!"
		italic: True
		size_hint_y: 0.1